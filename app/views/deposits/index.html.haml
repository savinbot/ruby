%h1 Listing deposits

%table
  %thead
    %tr
      %th User
      %th Coins
      %th
      %th
      %th

  %tbody
    - @deposits.each do |deposit|
      %tr
        %td= deposit.user
        %td= deposit.coins
        %td= link_to 'Show', deposit
        %td= link_to 'Edit', edit_deposit_path(deposit)
